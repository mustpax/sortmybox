{{> accountHeader }}

<div class="row">
  <div class="span8 offset2">
    <dl class="dl-horizontal account-info ">
      <dt>Name</dt>
      <dd>{{user.name}}</dd>
      <dt>Total file moves</dt>
      <dd>{{user.fileMoves}}</dd>
      <dt>Periodic sort</dt>
      <dd class="periodicSort">
        {{#if user.periodicSort}}
        <form action="/account/settings" method="post">
          {{> formCsrf }}
          <button class="btn disabled">Enabled</button>
          <input type="hidden" name="periodicSort" value="0">
          <button type="submit" class="btn btn-danger">Disable</button>
        </form>
        {{else}}
        <form action="/account/settings" method="post">
          {{> formCsrf }}
          <input type="hidden" name="periodicSort" value="1">
          <button type="submit" class="btn btn-primary">Enable</button>
          <button class="btn disabled">Disable</button>
        </form>
        {{/if}}
      </dd>
      <dt>Sorting folder</dt>
      <dd>
        <form action="/account/sortingFolder" method="post" class="form-inline">
          {{> formCsrf }}
          <input type="text" name="folder" value="{{user.sortingFolder}}">
          <input type="submit" class="btn" value="Update">
        </form>
      </dd>
      <dt>Last file move</dt>
      {{#if user.lastSync}}
      <dd>{{#if user.lastSync}}{{since user.lastSync}}{{else}}<em>None yet</em>{{/if}}</dd>
      {{else}}
      <dd><em>None yet</em></dd>
      {{/if}}
      <dt>Last login</dt>
      <dd>{{since user.lastLogin}}</dd>
      <dt>Created date</dt>
      <dd>{{user.created}}</dd>
      <dt>Last modified</dt>
      <dd>{{user.modified}}</dd>
    </dl>
  </div>
</div>
